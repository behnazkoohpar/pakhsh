<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:Context="com.koohpar.dstrbt.ui.categoryStuff.CategoryStuffActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.koohpar.dstrbt.ui.categoryStuff.CategoryStuffViewModel" />
    </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@color/colorPrimary">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/colorPrimary">

          <TextView
              style="@style/AppTheme.font"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:padding="@dimen/padding_large"
              android:textColor="@color/black_effective"
              android:text="@string/categorylist" />
      </RelativeLayout>
      <android.support.v7.widget.RecyclerView
          android:id="@+id/category_stuff_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_marginTop="@dimen/margin_mini_small"
          android:background="@color/colorPrimary">

      </android.support.v7.widget.RecyclerView>

  </LinearLayout>
</layout>